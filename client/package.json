{
  "description": "Messaging App",
  "main": "public/main.js",
  "name": "convohub-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.12.2",
    "emoji-mart": "^5.6.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-datepicker": "^9.1.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "^5.0.1",
    "react-scrollbars-custom": "^4.1.1",
    "remark-gfm": "^4.0.1",
    "simplebar": "^6.3.3",
    "simplebar-react": "^3.3.2",
    "socket.io-client": "^4.8.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "deploy": "vercel --prod",
    "electron-dev": "electron .",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:build-win": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --win",
    "electron:build-mac": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --mac",
    "electron:build-linux": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^5.9.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "extends": null,
    "appId": "com.convohub.app",
    "productName": "ConvoHub",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "NSIS"
    },
    "mac": {
      "icon": "build/icon.png",
      "target": "dmg"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  }
}
